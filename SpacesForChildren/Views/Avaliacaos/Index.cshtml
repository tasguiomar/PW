@model IEnumerable<SpacesForChildren.Models.Avaliacao>

@{
    ViewBag.Title = "Lista de Avaliações";
}

<div class="box">

    <h2 style="margin-left:15px">Avaliações</h2>

    @*<p style="margin-left:15px">
        @Html.ActionLink("Avaliar Serviço", "Create")
    </p>*@
    <table class="table">
        <tr class="cabecalho">
            <th>
                Instituição:
            </th>
            <th>
                Serviço:
            </th>
            <th>
                Preço:
            </th>
            <th>
                Localização:
            </th>
            <th>
                Ambiente:
            </th>
            <th>
                Geral:
            </th>
        </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Servico.Instituicao.InstituicaoNome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Servico.ServicosDescricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AvaliacaoPreco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AvaliacaoLocalizacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AvaliacaoAmbiente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AvaliacaoGeral)
            </td>
        </tr>
    }

    </table>
</div>