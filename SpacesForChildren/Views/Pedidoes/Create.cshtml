@model SpacesForChildren.Models.Pedido

@{
    ViewBag.Title = "Efectuar Pedido";
}

<div class="box">

    <h2 style="margin-left:15px;">Efectuar Pedido</h2>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                Anúncio:
                <div class="col-md-10">
                    @Html.DropDownList("AnuncioID", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.AnuncioID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Enviar" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    <hr />
    <div>
        @Html.ActionLink("Anúncios", "../Anuncios/Index") |
        @Html.ActionLink("Pedidos", "../Pedidoes/Index")
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
